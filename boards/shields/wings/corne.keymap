#define DEFAULT 0
#define LOWER 1
#define RAISE 2

#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {

    keymap {
        compatible = "zmk,keymap";

        // This is a sample keymap intended to be replaced with your own
        base_layer {
            bindings = <
            // ------------------------------------------------------------------------------------------------------------
            // |  ESC  |  Q  |  W  |  E   |  R   |  T   |                   |  Y   |  U    |  I    |  O   |   P   |   -   |
            // | SHIFT |  A  |  S  |  D   |  F   |  G   |                   |  H   |  J    |  K    |  L   |   ;   |   '   |
            // |  CTRL |  Z  |  X  |  C   |  V   |  B   |                   |  N   |  M    |  ,    |  .   |   /   | TAB |
            //                     | LOWER| SPACE| GUI  |                   | DEL   | ENTER | RAISE|
                &kp ESC    &kp Q      &kp W      &kp E      &kp R       &kp T                &kp Y      &kp U      &kp I      &kp O      &kp P      &kp MINUS
                &sk LSHIFT &kp A      &kp S      &kp D      &kp F       &kp G                &kp H      &kp J      &kp K      &kp L      &kp SEMI   &kp SQT
                &kp LCTRL  &kp Z      &kp X      &kp C      &kp V       &kp B                &kp N      &kp M      &kp COMMA  &kp DOT    &kp FSLH   &kp TAB
                                                 &mo LOWER  &kp SPACE   &kp LGUI             &kp BSPC   &kp ENTER  &mo RAISE
            >;
        };           

        lower_layer {
            // ------------------------------------------------------------------------------------------------------------
            // |  F1   |  F2 |  F3 |  F4  |  F5  |  F6  |                   |  F7  |  F8   |  F9   |  F10 |  F11  |  F12  |
            // |   `   |  !  |  @  |  #   |  $   |  %   |                   |  ^   |  &    |  *    |  (   |   )   |   ~   |
            // |       |     |     |      |      |      |                   |      |  -    |  +    |  {   |   }   |  "|"  |
            //               |     |      |      | LOWER|                   | RAISE|       |       |      |
            bindings = <
                &kp F1     &kp F2     &kp F3     &kp F4     &kp F5      &kp F6               &kp F7     &kp F7     &kp F8     &kp F9     &kp F10    &kp F11
                &none      &none      &none      &none      &none       &none                &none      &none      &none      &kp LPAR   &kp RPAR   &kp TILDE
                &none      &none      &none      &none      &none       &none                &none      &kp MINUS  &kp PLUS   &kp LBRC   &kp RBRC   &kp PIPE
                                                 &none      &none       &mo LOWER            &mo RAISE  &none      &none  
            >;

        };

        raise_layer {
            // ------------------------------------------------------------------------------------------------------------
            // | studio|     |     |      |      |      |                   |      |       |   ^   |      |       |       |
            // |       |     |     |      |      |      |                   |      |   <-  |   v   |  ->  |       |       |
            // |BT CLR |     |     |      |      |      |        |  |       |      |       |   =   |  [   |   ]   |   \   |
            //               |     |      |      | LOWER|                   | RAISE|       |       |      |
            bindings = <
                &studio_unlock      &none      &none      &none      &none       &none                &none      &none      &kp UP     &none      &none      &none 
                &none      &none      &none      &none      &none       &none                &none      &kp LEFT   &kp DOWN   &kp RIGHT  &none      &none 
                &bt BT_CLR_ALL   &none   &none      &none      &none       &none                &none      &none      &kp EQUAL  &kp LBKT   &kp RBKT   &kp BSLH
                                            &none      &none       &mo LOWER            &mo RAISE  &none      &none       
            >;

        };

    };
};